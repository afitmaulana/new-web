  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="<?= base_url('assets/js/plugins/zxing/zxing.min.js') ?>"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <script>
  document.addEventListener('DOMContentLoaded', function() {
    let selectedDeviceId = null;
    let audio = new Audio("<?= base_url('assets/audio/beep.mp3'); ?>");
    const codeReader = new ZXing.BrowserMultiFormatReader();
    const sourceSelect = $('#pilihKamera');

    function initScanner() {
      codeReader.listVideoInputDevices().then(videoInputDevices => {
        if (videoInputDevices.length < 1) {
          alert("Kamera tidak ditemukan!");
          return;
        }

        // set default kamera
        if (!selectedDeviceId) {
          selectedDeviceId = videoInputDevices[0].deviceId;
        }

        // isi dropdown
        sourceSelect.html('');
        videoInputDevices.forEach(device => {
          const option = $('<option>').val(device.deviceId).text(device.label || 'Camera');
          if (device.deviceId === selectedDeviceId) option.attr('selected', true);
          sourceSelect.append(option);
        });

        $('#searching').hide();
        $('#previewKamera').show();

        codeReader.decodeOnceFromVideoDevice(selectedDeviceId, 'previewKamera').then(result => {
          console.log(result.text);
          cekData(result.text);

          $('#previewKamera').hide();
          $('#searching').show();

          codeReader.reset();

          setTimeout(() => {
            initScanner();
          }, 2500);

        }).catch(err => console.error(err));
      }).catch(err => console.error(err));
    }

    // pilih kamera manual
    sourceSelect.on('change', function() {
      selectedDeviceId = $(this).val();
      if (codeReader) {
        codeReader.reset();
        initScanner();
      }
    });

    // ajax cek data
    function cekData(code) {
      $.post("<?= base_url('scan/cek'); ?>", {
        unique_code: code,
        waktu: 'masuk' // bisa diubah sesuai logika server
      }, function(response) {
        audio.play();
        $('#hasilScan').html(response);
        $('html, body').animate({ scrollTop: $("#hasilScan").offset().top }, 500);
      }).fail(function(xhr) {
        $('#hasilScan').html("<div class='alert alert-danger'>Terjadi kesalahan</div>");
      });
    }

    // kontrol saat modal dibuka/ditutup
    $('#scanModal').on('shown.bs.modal', function () {
      initScanner();
    }).on('hidden.bs.modal', function () {
      if (codeReader) codeReader.reset();
      $('#hasilScan').html('');
    });
  });
  </script>

